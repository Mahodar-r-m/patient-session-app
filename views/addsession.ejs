<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <style>
        input{
            font-size: smaller !important;
        }
        input::placeholder {
            color: #c2c2c2 !important;
        }
    </style>
</head>
<body class="pt-2">

    <div class="container">
        <a href="/" style="text-decoration: none;">
            <div class="d-flex breadcrumb align-items-center">
                <i class="fa fa-chevron-left" style="color: initial;"></i>
                <h6 class="ml-2" style="padding-top: 5px;color: initial;">Add Session</h6>
            </div>
        </a>
    </div>

    <!-- Import patient widget -->
    <%- include('./partials/patient') %>
    <hr>

    <div class="container">
        <h5>Schedule Session</h5>
        <form>
            <div class="form-group">
                <label for="session-type" class="label">Session Type</label>
                <div class="d-flex">
                    <div class="form-check">
                        <input class="form-check-input" checked type="radio" name="session-type" id="in-person" value="In-Person">
                        <label class="form-check-label" for="in-person">In-Person</label>
                    </div>
                    <div class="form-check ml-3">
                        <input class="form-check-input" type="radio" name="session-type" id="online" value="Online">
                        <label class="form-check-label" for="online">Online</label>
                    </div>
                </div>
            </div>

            <div class="form-group" id="online-session-link-field" style="display: none;">
                <label for="online-session-link" class="label">Online Session Link</label>
                <input type="text" class="form-control" id="online-session-link" placeholder="Add Online Session Link / Whatsapp Number">
            </div>
    
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="session-date" class="label">Session Date</label>
                    <input type="date" class="form-control" id="session-date">
                </div>
    
                <div class="form-group col-md-6">
                    <label for="session-time" class="label">Session Time Slot</label>
                    <input type="time" class="form-control" id="session-time">
                </div>
            </div>
    
            <div class="form-group">
                <div class="form-row d-flex justify-content-between" style="color: #999;">
                    <label for="practitioner-name" class="col-6">Enter Practitioner Name</label>
                    <div class="form-check col-6">
                        <input type="checkbox" class="form-check-input" id="add-practitioner">
                        <label class="form-check-label" for="add-practitioner">Add Psychiatrist</label>
                    </div>
                </div>
                <input type="text" class="form-control" id="practitioner-name" placeholder="Add Psychiatrist">
            </div>
    
            <div class="form-group">
                <label for="practitioner-email-address" class="label">Email Address</label>
                <input type="email" class="form-control" id="practitioner-email-address" placeholder="Enter email address of Psychiatrist">
            </div>
    
            <div class="form-group">
                <label for="session-details" class="label">Session Details (Optional)</label>
                <input type="text" class="form-control" id="session-details" placeholder="Enter session details here">
            </div>
    
            <div class="form-group">
                <div class="row">
                    <div class="col-6 text-right">
                        <button type="button" class="btn btn-outline-secondary close-btn cancel-button">Cancel</button>
                    </div>
                    <div class="col-6 text-left">
                        <button type="button" class="btn add-session-btn add-button" disabled>Add</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    
    <script src="/js/addsession.js"></script>
    
</body>
</html>